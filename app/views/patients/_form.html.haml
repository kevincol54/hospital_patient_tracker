=form_for [@hospital, @patient] do |f|
  = render 'layouts/error_messages', object: @patient
  =f.hidden_field :hospital_id, value: @hospital.id
  =f.label :name
  =f.text_field :name
  %br
  =f.label :address
  =f.text_field :address
  %br
  =f.label :phone
  =f.text_field :phone
  %br
  =f.label :description
  =f.text_area :description
  %br
  =f.label :email
  =f.text_field :email, placeholder: "Email"
  %br
  -@hospitals.each do |hospital|
    =check_box_tag 'patient[hospital_ids][]', hospital.id, false, {id: "hospital_id_#{hospital.id}"}
    =label_tag "hospital_id_#{hospital.id}", hospital.name
  %br
  =f.submit
%br
=link_to "Cancel", hospital_path(@hospital)
  
